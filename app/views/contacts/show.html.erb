
<%if @contact.image.attached?%>
   <p><%= image_tag(@contact.image,:class=> "img-circular") %></p>
<%else%>
   <img class= "img-circular" src ="https://pic.onlinewebfonts.com/svg/img_162044.png">
<%end%>
<div class="details">
<h2><%= @contact.first_name %></h2>
<h2><%= @contact.last_name %></h2>
<p><b>Phone Number: </b><%= @contact.phone_number %></p>
<p><b>Mail: </b><%= @contact.email %></p>
<p><b>Company name: </b><%= @contact.company_name %></p>
<p><b>DOB: </b><%= @contact.birth_date %></p>
<p><b>Address :</b><%= @contact.address %></p>


  <%= link_to "<button>Edit</button>".html_safe, edit_contact_path(@contact) %>
  <%= link_to "<button>Delete</button>".html_safe, contact_path(@contact),
  method: :delete, data: {confirm: "Are you sure?" } %>
  <p><%= link_to "<button>Home</button>".html_safe,root_path(@contact) %><p>

</div>